<mapper namespace="crm">

    <select id="getPopCrmList" parameterType="map" resultType="map">
        SELECT
            *
        FROM
            CAM_CRM.DJ_CRM_INFO
    </select>

    <select id="getCrmData" parameterType="map" resultType="map">
        SELECT
            *
        FROM
            CAM_CRM.DJ_CRM_INFO
        WHERE
            CRM_SN = #{crmSn}
