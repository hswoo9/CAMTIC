<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!-- SqlSession setup for MyBatis Database Layer -->
    <bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />
        <property name="mapperLocations" value="classpath:/egovframework/sqlmap/epis/**/*.xml" />
        <property name="typeAliases" value="egovframework.devjitsu.intra.eval.vo.CommitteeVO" />
    </bean>

    <bean id="sqlSessionTemplate" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSession" />
    </bean>

    <!--mssql -->
    <bean id="sqlSessionMs" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSourceMs" />
        <property name="mapperLocations" value="classpath:/egovframework/sqlmap/epis/**/*.xml" />
        <property name="typeAliases" value="egovframework.devjitsu.intra.eval.vo.CommitteeVO" />
    </bean>

    <bean id="sqlSessionTemplateMs" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="sqlSessionMs"/>
    </bean>

    <!-- 실행환경에서 빈이름 참조(EgovAbstractDAO) -->
    <bean id="lobHandler" class="org.springframework.jdbc.support.lob.DefaultLobHandler" lazy-init="true" />

    <bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocations">
            <list>
                <value>classpath:egovframework/sqlmap/config/ibatis/*.xml</value>
            </list>
        </property>
        <property name="dataSource" ref="dataSource"/>
        <property name="lobHandler" ref="lobHandler"/>
    </bean>

</beans>
